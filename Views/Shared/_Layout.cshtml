@using Blogs.Models
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - My ASP.NET Application</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	<style>
		.shadow:hover {
			cursor: pointer;
			transition: all .5s;
			box-shadow: 2px 2px 4px lightgrey !important;
		}
	</style>
</head>
<body>
	<nav class="navbar navbar-light bg-light py-">
		<div class="container">
			<a class="navbar-brand" href="/">
				<img src="~/Assets/images/logo.png" class="mb-1" alt="" width="30" height="24">
				<span class="title-font mx-2"> Our Blogs </span>
			</a>

			<div class="d-flex">
				@if (!Blogs.Models.User.IsLoggedIn())
				{
					<div class="nav-item">
						<a class="btn btn-outline-danger mx-2" style="border-width: 2px !important" href='@Url.Action("Index", "Auth")'> Login </a>
					</div>

					<div class="nav-item">
						<a class="btn btn-outline-primary mx-2" style="border-width: 2px !important" href='@Url.Action("Registration", "Auth")'> Registration</a>
					</div>
				}
				else
				{
					<div class="nav-item mx-2">
						<a class="btn btn-outline-primary" href='@Url.Action("Index", "Blog")'>
							My Blogs
						</a>
					</div>

					<div class="nav-item mx-2">
						<a class="btn btn-outline-dark" href='@Url.Action("Signout", "Auth")'>
						Signout
						</a>
					</div>
				}
			</div>
		</div>

	</nav>

	<div class="body-content">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	<script src="~/Scripts/bootstrap.js"></script>
	@RenderSection("scripts", required: false)
</body>
</html>
