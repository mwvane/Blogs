@model IEnumerable<Blogs.Models.Blog>
<div class="container mt-5">
	<h3> My Blogs Page </h3>
	<hr />
	<div class="my-4">
		<a class="btn btn-primary" href='@Url.Action("Create", "Blog")'>
			Create blog
		</a>
	</div>
	<div class="mt-5">
		<div class="row">
			@foreach(var blog in Model)
			{
			<div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-4  my-4">
				<form method="get" action='@Url.Action("Show", "Blog", new { id = blog.Id })'>
					<div class="card rounded border-0 shadow" onclick="this.parentNode.submit()">
						<div class="position-absolute" style="right:0; top: -20px">
							<div class="d-flex">
								<a href='@Url.Action("Edit", "Blog", new { id = blog.Id })'
								   class="mx-2 btn btn-primary rounded-circle">
									<i class="fa fa-pencil"></i>
								</a>
								<a href='@Url.Action("Delete", "Blog", new { id = blog.Id })'
								   class="btn btn-danger rounded-circle">
									<i class="fa fa-trash"></i>
								</a>
							</div>
						</div>
						<div class="card-header">
							<img src='@Url.Content("~/Assets/UploadedFiles/" + blog.ImageUrl)' width="100%" height="300px" alt="" />
						</div>
						<div class="card-body" style="height: 100px">
							<h4 class="text-primary">@blog.Title</h4>
						</div>
					</div>
				</form>
			</div>
			}
		</div>
	</div>
</div>