@model Blogs.Models.Blog

<div class="container-fluid mt-4">

	<div class="row">
		<div class="col-12 col-md-3 col-lg-2">
			<div class="my-4 mx-lg-2 mx-md-2 mx-0 text-center justify-content-center">
				<div class="rounded-circle border" style="width: 200px; height: 200px; padding-top: 55px">
					<img src="@Model.GetUser().getAvatar()" width="60px" />
					<h4 class="mt-2"> @Model.GetUser().Username </h4>
					<p class="text-success text-sm"> @Model.GetUser().GetBlogsCount() blogs </p>
				</div>
			</div>
		</div>
		<div class="col-12 col-md-6 col-lg-8">
			<div class="row justify-content-center">
				<div class="col-sm-12 col-md-9 col-lg-8" style="width: 95%">
					<div>
						<p class="title-font mb-0" style="font-size: 1.2rem">
							@Model.Title
						</p>
					</div>
					<div class="mb-4">
						<p class="text-muted">
							@Model.ShortDescription
						</p>
					</div>
					<div class="mt-3">
						<img src="@Url.Content("~/Assets/UploadedFiles/" + Model.ImageUrl)" alt="blog" width="100%" />
					</div>
					<div class="mt-4">
						<p>
							@Model.Description
						</p>
					</div>
				</div>
			</div>
		</div>
		<div class="col-12 col-md-3 col-lg-2">
			<div>
				left part
			</div>
		</div>
	</div>
</div>